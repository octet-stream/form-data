{
  "include": ["src/**/*.ts", "node-domexception.d.ts"],
  "exclude": [
    "node_modules",
    "src/__helper__/**",
    "src/**/*.test.ts"
  ],
  "compilerOptions": {
    "outDir": "lib",
    "target": "es2021",
    "module": "node16",
    "noImplicitAny": true,
    "baseUrl": "src",
    "checkJs": false,
    "allowJs": false,
    "skipLibCheck": false,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node16",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true
  }
}
